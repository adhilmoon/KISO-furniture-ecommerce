<!-- Login Page (login.ejs) -->
<div class="flex-grow flex items-center justify-center px-4 py-12 bg-kiso-bg">
  <div class="w-full max-w-md">
    <!-- Login Title -->
    <h1 class="text-3xl md:text-4xl text-center mb-10">
      <span class="text-kiso-brown font-normal">Login</span>
      <span class="text-kiso-text font-normal"> your KISO account.</span>
    </h1>

    <!-- Login Form -->
    <form id="userLoginForm" onsubmit="handleLogin(event,'user')" class="space-y-6" novalidate>

      <!-- Email Field -->
      <div class="space-y-2">
        <label for="email" class="block text-sm font-medium text-kiso-text">
          Email Address
        </label>
        <input type="email" id="email" name="email" placeholder="Enter your email"
          class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
          required>
      </div>

      <!-- Password Field -->
      <div class="space-y-2">
        <label for="password" class="block text-sm font-medium text-kiso-text">
          Password
        </label>
        <div class="relative">
          <input type="password" id="password" name="password" placeholder="Enter your password"
            class="w-full px-4 pr-12 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
            required>
          <button type="button" onclick="togglePassword()"
            class="absolute inset-y-0 right-4 flex items-center pr-4 text-gray-500 hover:text-gray-700 focus:outline-none">
            <svg id="eyeOpen" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            <svg id="eyeClosed" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none"
              viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477 0-8.268-2.943-9.542-7a9.97 9.97 0 012.423-4.568M6.18 6.18A9.953 9.953 0 0112 5c4.477 0 8.268 2.943 9.542 7a9.97 9.97 0 01-1.448 2.71M9.88 9.88a3 3 0 104.24 4.24" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3l18 18" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Forgot Password Link -->
      <div class="text-left">
        <a href="/user/forgot-password" class="text-sm text-kiso-placeholder hover:text-kiso-brown transition-colors">
          Forgot password
        </a>
      </div>

      <!-- Login Button -->
      <button type="submit"
        class="w-full bg-kiso-brown text-white py-3 rounded-lg font-medium hover:bg-kiso-brown-dark transition-colors">
        Log in
      </button>

      <!-- Error Message Display -->
      <div class="text-center mt-4 min-h-[20px] font-medium" id="local-error"></div>

      <!-- Google Login Button -->
      <a href="/user/auth/google"
        class="w-full bg-kiso-input border border-kiso-border text-kiso-text py-3 rounded-lg font-medium hover:bg-[#e0d7cd] transition-colors flex items-center justify-center gap-3"
        style="text-decoration: none;">
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M17.64 9.2c0-.637-.057-1.251-.164-1.84H9v3.481h4.844c-.209 1.125-.843 2.078-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615z"
            fill="#4285F4" />
          <path
            d="M9 18c2.43 0 4.467-.806 5.956-2.184l-2.908-2.258c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H.957v2.332C2.438 15.983 5.482 18 9 18z"
            fill="#34A853" />
          <path
            d="M3.964 10.707c-.18-.54-.282-1.117-.282-1.707 0-.593.102-1.17.282-1.709V4.958H.957C.347 6.173 0 7.548 0 9c0 1.452.348 2.827.957 4.042l3.007-2.335z"
            fill="#FBBC05" />
          <path
            d="M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0 5.482 0 2.438 2.017.957 4.958L3.964 7.29C4.672 5.163 6.656 3.58 9 3.58z"
            fill="#EA4335" />
        </svg>
        Continue with Google
      </a>

      <!-- Sign Up Link -->
      <div class="text-center pt-4">
        <p class="text-kiso-text text-sm">
          Don't have an account?
          <a href="/user/signup" class="text-kiso-brown hover:text-kiso-brown-dark font-medium transition-colors">
            Sign up
          </a>
        </p>
      </div>

    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios@1.13.2/dist/axios.min.js"></script>
<script src="/js/validation.js"></script>