<div class="min-h-screen bg-gradient-to-br from-[#F8F5F0] to-[#F0EBE2] flex flex-col justify-center items-center py-12 px-6 lg:px-8">
  <!-- Main Container with Glass Effect -->
  <div class="w-full max-w-md bg-white/80 backdrop-blur-sm rounded-2xl shadow-2xl p-8 border border-white/20">
    
    <!-- Header Section -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-[#A68B6D] to-[#8D775F] rounded-full mb-6 shadow-lg">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </div>
      <h2 class="text-4xl font-bold text-[#4A3F35] mb-2">
        Welcome to <span class="text-[#A68B6D]">KISO</span>
      </h2>
      <p class="text-[#A69E93] text-sm">Sign in to access your account</p>
    </div>

    <!-- Login Form -->
    <form class="space-y-6" action="#" method="POST">
      <!-- Email Field -->
      <div class="group">
        <label for="email" class="block text-sm font-semibold text-[#4A3F35] mb-2 transition-all duration-300 group-focus-within:text-[#8D775F]">
          Email Address
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-[#A69E93] group-focus-within:text-[#8D775F] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <input id="email" name="email" type="email" placeholder="you@example.com" required 
            class="block w-full pl-10 pr-4 py-4 bg-[#F8F5F0] border border-transparent rounded-xl shadow-sm placeholder-[#A69E93] focus:ring-2 focus:ring-[#8D775F] focus:border-transparent outline-none transition-all duration-300 hover:bg-[#F0EBE2] focus:bg-white">
        </div>
      </div>

      <!-- Password Field -->
      <div class="group">
        <label for="password" class="block text-sm font-semibold text-[#4A3F35] mb-2 transition-all duration-300 group-focus-within:text-[#8D775F]">
          Password
        </label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-[#A69E93] group-focus-within:text-[#8D775F] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <input id="password" name="password" type="password" placeholder="••••••••" required 
            class="block w-full pl-10 pr-10 py-4 bg-[#F8F5F0] border border-transparent rounded-xl shadow-sm placeholder-[#A69E93] focus:ring-2 focus:ring-[#8D775F] focus:border-transparent outline-none transition-all duration-300 hover:bg-[#F0EBE2] focus:bg-white">
          <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center">
            <svg class="w-5 h-5 text-[#A69E93] hover:text-[#8D775F] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Forgot Password -->
      <div class="flex justify-end">
        <a href="#" class="text-sm text-[#A68B6D] hover:text-[#7A6652] font-medium hover:underline transition-colors">
          Forgot password?
        </a>
      </div>

      <!-- Login Button -->
      <div>
        <button type="submit" 
          class="w-full flex justify-center items-center gap-2 py-4 px-4 border border-transparent rounded-xl shadow-lg text-sm font-semibold text-white bg-gradient-to-r from-[#A68B6D] to-[#8D775F] hover:from-[#8D775F] hover:to-[#7A6652] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#8D775F] transform hover:-translate-y-0.5 transition-all duration-300 active:translate-y-0">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
          </svg>
          Log in to your account
        </button>
      </div>
    </form>

    <!-- Divider -->
    <div class="relative my-8">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-[#EBE4D8]"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-4 bg-white/80 text-[#A69E93]">Or continue with</span>
      </div>
    </div>

    <!-- Google Sign In -->
    <div>
      <button type="button" 
        class="w-full flex items-center justify-center gap-3 py-4 px-4 border border-[#EBE4D8] rounded-xl shadow-sm text-sm font-medium text-[#4A3F35] bg-white hover:bg-[#F8F5F0] focus:outline-none focus:ring-2 focus:ring-[#8D775F] transition-all duration-300 transform hover:-translate-y-0.5 active:translate-y-0">
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.66l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Continue with Google
      </button>
    </div>

    <!-- Sign Up Link -->
    <div class="mt-8 text-center">
      <p class="text-sm text-[#A69E93]">
        Don't have an account? 
        <a href="#" class="font-semibold text-[#A68B6D] hover:text-[#7A6652] hover:underline transition-colors">
          Sign up now
        </a>
      </p>
    </div>
  </div>

  <!-- Footer Note -->
  <div class="mt-8 text-center">
    <p class="text-xs text-[#A69E93]">
      By logging in, you agree to our 
      <a href="#" class="text-[#A68B6D] hover:underline">Terms</a> 
      and 
      <a href="#" class="text-[#A68B6D] hover:underline">Privacy Policy</a>
    </p>
  </div>
</div>
