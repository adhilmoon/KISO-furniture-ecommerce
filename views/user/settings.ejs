<div class="w-full max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-2xl p-6 md:p-10 shadow-sm border border-gray-100">
        <h1 class="text-2xl font-bold">Account Settings</h1>

        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
            <h2 class="text-lg font-semibold mb-4">Email Address</h2>
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Current Email</p>
                    <p class="font-medium">
                        <%= user.email %>
                    </p>
                </div>
                <button onclick="showEmailModal()" class="text-blue-600 hover:underline text-sm">Change Email</button>
            </div>
        </div>
        <% if (!user.googleId) { %>
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
                <h2 class="text-lg font-semibold mb-4">Security</h2>
                <form id="changePasswordForm" class="space-y-4">
                    <div>
                        <label class="block text-sm text-gray-600">Current Password</label>
                        <input type="password" name="currentPassword" id="currentPassword"
                            class="w-full border rounded-md p-2 mt-1">
                    </div>
                    <div>
                        <label class="block text-sm text-gray-600">New Password</label>
                        <input type="password" name="newPassword" id="newPassword"
                            class="w-full border rounded-md p-2 mt-1">
                    </div>
                    <div class="flex items-center justify-between">
                        <label for="showPasswordToggle" class="flex items-center cursor-pointer">
                            <div class="relative">
                                <!-- Toggle Input (Hidden) -->
                                <input type="checkbox" id="showPasswordToggle" class="peer sr-only"
                                    onchange="togglePasswordVisibility()">

                                <!-- Toggle Background -->
                                <div
                                    class="block w-12 h-6 bg-gray-300 rounded-full peer-checked:bg-[#9A7556] transition-colors">
                                </div>

                                <!-- Toggle Dot -->
                                <div
                                    class="absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition-transform peer-checked:translate-x-6">
                                </div>
                            </div>
                            <span class="ml-3 text-sm font-medium text-gray-700">Show Password</span>
                        </label>
                    </div>
                    <p id="pass-error" class=" text-xs font-medium mb-3 min-h-[1rem]"></p>

                    <button type="submit" class="bg-black text-white px-4 py-2 rounded-md hover:bg-zinc-800 transition">
                        Update Password
                    </button>

                </form>
            </div>
            <% } else { %>
                <div class="bg-gray-50 p-6 rounded-lg border border-gray-100 italic text-gray-500 text-sm">
                    You are logged in via Google. Password management is handled by your Google Account.
                </div>
                <% } %>
    </div>
    <%- include('./email-Modal') %>
        <%- include('./otp-Modal') %>
</div>

<script src="/js/settings.js"></script>