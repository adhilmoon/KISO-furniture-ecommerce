        <div class="flex-1 bg-white px-8 py-10 flex flex-col justify-center relative">

            <!-- Close -->
            <button onclick="closeOTPModal()"
                class="absolute top-4 right-4 w-8 h-8 flex items-center justify-center rounded-full bg-gray-100 hover:bg-gray-200 transition text-gray-400 text-xs font-bold">
                ✕
            </button>

            <!-- Mobile brand -->
            <div class="flex md:hidden items-center gap-2 mb-6">
                <span class="text-base font-black tracking-widest uppercase text-[#1a1a1a]">KISO</span>
                <div class="h-3 w-px bg-gray-300"></div>
