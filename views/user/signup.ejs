<div class="flex-grow flex items-center justify-center px-4 py-12 bg-kiso-bg">
    <div class="w-full max-w-md">
        <h1 class="text-3xl md:text-4xl text-center mb-10">
            <span class="text-kiso-brown font-normal">Create</span>
            <span class="text-kiso-text font-normal"> your KISO account.</span>
        </h1>

        <form id="userSignupForm" onsubmit="signup_handle(event)" class="space-y-6" novalidate>

            <div class="space-y-2">
                <label for="name" class="block text-sm font-medium text-kiso-text">Full Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your name"
                    class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
                    required>
            </div>

            <div class="space-y-2">
                <label for="email" class="block text-sm font-medium text-kiso-text">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email"
                    class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
                    required>
            </div>

            <div class="space-y-2">
                <label for="password" class="block text-sm font-medium text-kiso-text">Password</label>
                <input type="password" id="password" name="password" placeholder="Create a password"
                    class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
                    required>
            </div>

            <div class="space-y-2">
                <label for="confirmPassword" class="block text-sm font-medium text-kiso-text">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password"
                    class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
                    required>
            </div>
            <!-- Show Password Toggle Switch -->
            <div class="flex items-center justify-between">
                <label for="showPasswordToggle" class="flex items-center cursor-pointer">
                    <div class="relative">
                        <!-- Toggle Input (Hidden) -->
                        <input type="checkbox" id="showPasswordToggle" class="peer sr-only"
                            onchange="togglePasswordVisibility()">

                        <!-- Toggle Background -->
                        <div
                            class="block w-12 h-6 bg-gray-300 rounded-full peer-checked:bg-[#9A7556] transition-colors">
                        </div>

                        <!-- Toggle Dot -->
                        <div
                            class="absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition-transform peer-checked:translate-x-6">
                        </div>
                    </div>
                    <span class="ml-3 text-sm font-medium text-gray-700">Show Password</span>
                </label>
            </div>
            <div class="space-y-2">
                <label for="referralCode" class="block text-sm font-medium text-kiso-text">Referral Code</label>
                <input type="text" id="referralCode" name="referralCode" placeholder="Enter referral code (optional)"
                    class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors">
            </div>

           <p id="local-error" class="text-center font-medium mt-2 min-h-[1.25rem]"></p>
            <button type="submit"
                class="w-full bg-kiso-brown text-white py-3 rounded-lg font-medium hover:bg-kiso-brown-dark transition-colors">
                Sign Up
            </button>

            <button type="button"
                class="w-full bg-kiso-input border border-kiso-border text-kiso-text py-3 rounded-lg font-medium hover:bg-[#e0d7cd] transition-colors flex items-center justify-center gap-3">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M17.64 9.2c0-.637-.057-1.251-.164-1.84H9v3.481h4.844c-.209 1.125-.843 2.078-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615z"
                        fill="#4285F4" />
                    <path
                        d="M9 18c2.43 0 4.467-.806 5.956-2.184l-2.908-2.258c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H.957v2.332C2.438 15.983 5.482 18 9 18z"
                        fill="#34A853" />
                    <path
                        d="M3.964 10.707c-.18-.54-.282-1.117-.282-1.707 0-.593.102-1.17.282-1.709V4.958H.957C.347 6.173 0 7.548 0 9c0 1.452.348 2.827.957 4.042l3.007-2.335z"
                        fill="#FBBC05" />
                    <path
                        d="M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0 5.482 0 2.438 2.017.957 4.958L3.964 7.29C4.672 5.163 6.656 3.58 9 3.58z"
                        fill="#EA4335" />
                </svg>
                Continue with Google
            </button>

            <div class="text-center pt-4">
                <p class="text-kiso-text text-sm">
                    Already have an account?
                    <a href="/user/login"
                        class="text-kiso-brown hover:text-kiso-brown-dark font-medium transition-colors">
                        Log in
                    </a>
                </p>
            </div>

        </form>
    </div>
</div>
<div id="otpModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-[2px]">
    <div class="bg-white p-6 rounded-2xl shadow-2xl w-[320px] text-center">
        <h2 class="text-xl font-bold mb-4 text-gray-800">Verify OTP</h2>
        
        <input type="text" id="otpInput" oninput="toggleVerifyButton()"
            class="w-full border-2 border-gray-200 rounded-lg p-2 text-center text-xl tracking-widest focus:border-brown-600 outline-none mb-4" 
            placeholder="0000" maxlength="4">
        
        <button id="verifyBtn" onclick="verifyOTP()" 
            class="hidden w-full bg-brown-600 hover:bg-brown-700 text-green-600 font-bold py-2.5 rounded-lg transition duration-300">
            Verify
        </button>
        
        <div class="mt-4 text-xs">
            <p id="timerContainer" class="text-gray-500">
                Resend OTP in: <span id="timer" class="font-bold text-red-500">02:00</span>
            </p>
            <button id="resendBtn" class="hidden text-brown-600 font-bold hover:underline mt-2" onclick="resendOTP()">
                Resend OTP
            </button>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios@1.13.2/dist/axios.min.js"></script>
<script src="/js/handleSignup.js"></script>