<div id="addressModal" class="fixed inset-0 z-50 hidden bg-black/50 items-center justify-center p-4">.


    <div class="bg-white rounded-2xl w-[560px] max-w-[90vw] shadow-xl">
        <div class="p-5 border-b border-gray-100 flex justify-between items-center">
            <h3 class="text-lg font-bold text-gray-900">Add New Address</h3>
            <button onclick="toggleAddressModal()" class="text-gray-400 hover:text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <form id="addressForm" onsubmit="handleAddressSubmit(event)" class="p-5 space-y-3">
            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="text-xs font-semibold text-gray-700">Full Name <span
                            class="text-red-500">*</span></label>
                    <input type="text" id="fullName" name="fullName" placeholder="Enter full name"
                        class="mt-1 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#9A7556] outline-none text-sm">
                    <p id="err-fullName" class="text-red-500 text-xs mt-0.5"></p>
                </div>
                <div>
                    <label class="text-xs font-semibold text-gray-700">Mobile Number <span
                            class="text-red-500">*</span></label>
                    <input type="tel" id="mobile" name="mobile" placeholder="10-digit number"
                        class="mt-1 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#9A7556] outline-none text-sm">
                    <p id="err-mobile" class="text-red-500 text-xs mt-0.5"></p>
                </div>
            </div>


            <div>
                <label class="text-xs font-semibold text-gray-700">House Name / Area <span
                        class="text-red-500">*</span></label>
                <input type="text" id="houseName" name="houseName" placeholder="Flat No, Building, Street"
                    class="mt-1 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#9A7556] outline-none text-sm">
                <p id="err-houseName" class="text-red-500 text-xs mt-0.5"></p>
            </div>


            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="text-xs font-semibold text-gray-700">City <span class="text-red-500">*</span></label>
                    <input type="text" id="city" name="city" placeholder="City"
                        class="mt-1 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#9A7556] outline-none text-sm">
                    <p id="err-city" class="text-red-500 text-xs mt-0.5"></p>
                </div>
                <div>
                    <label class="text-xs font-semibold text-gray-700">State <span class="text-red-500">*</span></label>
                    <input type="text" id="state" name="state" placeholder="State"
                        class="mt-1 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#9A7556] outline-none text-sm">
                    <p id="err-state" class="text-red-500 text-xs mt-0.5"></p>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="text-xs font-semibold text-gray-700">Pincode <span
                            class="text-red-500">*</span></label>
                    <input type="text" id="pincode" name="pincode" placeholder="6-digit PIN" maxlength="6"
                        class="mt-1 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#9A7556] outline-none text-sm">
                    <p id="err-pincode" class="text-red-500 text-xs mt-0.5"></p>
                </div>
                <div>
                    <label class="text-xs font-semibold text-gray-700">Address Type</label>
                    <select id="type" name="type"
                        class="mt-1 w-full p-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#9A7556] bg-white outline-none text-sm">
                        <option value="Home">Home</option>
                        <option value="Work">Work</option>
                    </select>
                </div>
            </div>


            <div class="flex justify-end gap-3 pt-3 border-t border-gray-100">
                <button type="button" onclick="toggleAddressModal()"
                    class="px-5 py-2 text-gray-600 bg-gray-100 rounded-lg hover:bg-gray-200 text-sm font-medium">
                    Cancel
                </button>
                <button type="submit"
                    class="px-5 py-2 bg-[#9A7556] text-white rounded-lg hover:bg-[#876649] shadow-md active:scale-95 text-sm font-medium">
                    Save Address
                </button>
            </div>

        </form>
    </div>
</div>




