<div class="flex-grow flex items-center justify-center px-4 py-12 bg-kiso-bg">
    <div class="w-full max-w-md">
        <h1 class="text-3xl md:text-4xl text-center mb-2">
            <span class="text-kiso-brown font-normal">Forgot</span>
            <span class="text-kiso-text font-normal"> your password?</span>
        </h1>
        <p class="text-center text-gray-500 text-sm mb-8">No worries, we'll help you recover it.</p>

        <!-- Step 1: Email Input -->
        <div id="step1" class="space-y-6">
            <form onsubmit="handleForgotPassword(event)" class="space-y-6" novalidate>
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-medium text-kiso-text">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email"
                        class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
                        required>
                </div>

                <p id="forgot-error" class="text-center font-medium text-red-600 text-sm min-h-[1.25rem]"></p>

                <button type="submit"
                    class="w-full bg-kiso-brown text-white py-3 rounded-lg font-medium hover:bg-kiso-brown-dark transition-colors">
                    Send Recovery Code
                </button>
            </form>
        </div>

        <!-- Step 2: OTP Verification -->
        <div id="step2" class="hidden space-y-6">
            <div class="text-center mb-4">
                <p class="text-sm text-gray-600">We've sent a recovery code to</p>
                <p id="email-display" class="font-medium text-gray-900"></p>
            </div>

            <form onsubmit="handleVerifyResetOtp(event)" class="space-y-6" novalidate>
                <div class="space-y-2">
                    <label for="resetOtp" class="block text-sm font-medium text-kiso-text">Recovery Code</label>
                    <input type="text" id="resetOtp" name="resetOtp" placeholder="Enter 4-digit code"
                        class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors text-center text-2xl font-bold tracking-[0.5em]"
                        maxlength="4" required>
                </div>

                <p id="otp-error" class="text-center font-medium text-red-600 text-sm min-h-[1.25rem]"></p>

                <div class="text-center text-sm">
                    <p class="text-gray-600">Code expires in <span id="reset-timer" class="font-bold text-kiso-brown">02:00</span></p>
                </div>

                <button type="submit"
                    class="w-full bg-kiso-brown text-white py-3 rounded-lg font-medium hover:bg-kiso-brown-dark transition-colors">
                    Verify Code
                </button>

                <button type="button" onclick="handleForgotPassword(event)"
                    class="w-full bg-kiso-input border border-kiso-border text-kiso-text py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    Send New Code
                </button>
            </form>
        </div>

        <!-- Step 3: Reset Password -->
        <div id="step3" class="hidden space-y-6">
            <form onsubmit="handleResetPassword(event)" class="space-y-6" novalidate>
                <div class="space-y-2">
                    <label for="newPassword" class="block text-sm font-medium text-kiso-text">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" placeholder="Create a new password"
                        class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
                        required>
                </div>

                <div class="space-y-2">
                    <label for="confirmNewPassword" class="block text-sm font-medium text-kiso-text">Confirm Password</label>
                    <input type="password" id="confirmNewPassword" name="confirmNewPassword" placeholder="Confirm your password"
                        class="w-full px-4 py-3 bg-kiso-input border border-kiso-border rounded-lg text-kiso-text placeholder-kiso-placeholder focus:outline-none focus:border-kiso-brown transition-colors"
                        required>
                </div>

                <div class="flex items-center gap-2">
                    <input type="checkbox" id="showResetPasswordToggle" onchange="toggleResetPasswordVisibility()"
                        class="h-4 w-4 accent-kiso-brown">
                    <label for="showResetPasswordToggle" class="text-sm text-gray-700">Show Passwords</label>
                </div>

                <p id="reset-error" class="text-center font-medium text-red-600 text-sm min-h-[1.25rem]"></p>

                <button type="submit"
                    class="w-full bg-kiso-brown text-white py-3 rounded-lg font-medium hover:bg-kiso-brown-dark transition-colors">
                    Reset Password
                </button>
            </form>
        </div>

        <div class="text-center pt-4 mt-6 border-t border-gray-200">
            <p class="text-kiso-text text-sm">
                Remember your password?
                <a href="/user/login"
                    class="text-kiso-brown hover:text-kiso-brown-dark font-medium transition-colors">
                    Log in
                </a>
            </p>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios@1.13.2/dist/axios.min.js"></script>
<script src="/js/forgotPassword.js"></script>
