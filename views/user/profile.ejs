<div class="flex-grow flex items-center justify-center px-4 py-12 bg-kiso-bg">

    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r border-gray-200 p-6 space-y-2">
        <a href="/user/profile" class="block px-4 py-3 bg-[#E8E0D5] text-gray-900 font-medium rounded-lg">
            Personal Info
        </a>
        <a href="/user/orders" class="block px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition">
            My Orders
        </a>
        <a href="/user/address" class="block px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition">
            Address
        </a>
        <a href="/user/wallet" class="block px-4 py-3 text-gray-700 hover:bg-gray-100 rounded-lg transition">
            Wallet
        </a>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 bg-gray-50 p-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-gray-900 mb-8">Personal Information</h1>

            <!-- Profile Section -->
            <div class="bg-white rounded-2xl p-8 mb-8 shadow-sm">
                <!-- Profile Picture -->
                <div class="flex flex-col items-center mb-8">
                    <div class="relative">
                        <img src="<%= user.avatar %>" alt="Profile" class="w-32 h-32 rounded-full object-cover bg-[#F5D4BA]">
                        <label for="profileImageInput" class="absolute bottom-0 right-0 bg-white rounded-full p-2 shadow-lg hover:shadow-xl transition cursor-pointer">
                            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                            </svg>
                        </label>
                        <input type="file" id="profileImageInput" accept="image/*" class="hidden" onchange="handleProfileImageChange(event)">
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mt-4"><%= user.name || 'User Name' %></h2>
                    <p class="text-sm text-gray-500 mt-1">Click to upload or change your profile picture</p>
                    <button type="button" onclick="document.getElementById('profileImageInput').click()" class="text-sm text-[#9A7556] hover:text-[#876649] mt-1 font-medium">
                        Edit Profile Image
                    </button>
                </div>

                <!-- Form Fields -->
                <form id="profileForm" onsubmit="handleProfileUpdate(event)" class="space-y-6">
                    <!-- Name -->
                    <div>
                        <label for="name" class="block text-sm font-semibold text-gray-900 mb-2">Name</label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name"
                            value="<%= user.name || '' %>"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#9A7556] focus:border-transparent outline-none transition"
                        >
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email"
                            value="<%= user.email %>"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50 cursor-not-allowed outline-none"
                            readonly
                        >
                        <p class="text-xs text-gray-500 mt-1">Email cannot be changed</p>
                    </div>

                

                    <!-- Referral Program -->
                    <div class="mt-8 pt-8 border-t border-gray-200">
                        <h3 class="text-lg font-bold text-gray-900 mb-2">Referral Program</h3>
                        <p class="text-sm text-gray-600 mb-4">Share this code and both of you will receive wallet credit.</p>
                        
                        <div class="flex flex-col md:flex-row items-start md:items-center gap-4">
                            <div class="flex-1 w-full md:max-w-xs">
                                <div class="flex gap-2">
                                    <input 
                                        type="text" 
                                        id="referralCode"
                                        value="<%= user.referralCode || 'N/A' %>"
                                        readonly
                                        class="flex-1 px-4 py-3 border border-gray-300 rounded-lg bg-gray-50 outline-none font-mono"
                                    >
                                    <button 
                                        type="button"
                                        onclick="copyReferralCode()"
                                        class="px-6 py-3 bg-[#E8E0D5] hover:bg-[#D9CFC0] text-gray-900 font-medium rounded-lg transition flex items-center gap-2 whitespace-nowrap"
                                    >
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                        </svg>
                                        Copy
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Referral Image -->
                            <div class="hidden lg:block flex-shrink-0">
                                <div class="w-64 h-32 bg-gradient-to-r from-[#C9A87C] to-[#E8D5B7] rounded-lg flex items-center justify-center overflow-hidden">
                                    <div class="bg-white rounded-full p-8">
                                        <svg class="w-16 h-16 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Error/Success Message -->
                    <div id="profile-message" class="text-center mt-4 min-h-[20px] font-medium"></div>
                </form>
            </div>

            <!-- Logout and Save Buttons -->
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4 mb-8">
                <a href="/user/logout" class="flex items-center gap-2 text-gray-700 hover:text-gray-900 font-medium transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Logout
                </a>
                
                <button 
                    type="submit"
                    form="profileForm"
                    class="w-full sm:w-auto px-8 py-3 bg-[#9A7556] hover:bg-[#876649] text-white font-semibold rounded-lg transition transform hover:scale-105 active:scale-95"
                >
                    Save Changes
                </button>
            </div>
        </div>
    </main>

</div>
