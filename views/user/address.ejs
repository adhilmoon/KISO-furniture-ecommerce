<div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
    <div class="flex justify-between items-start mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">My Addresses</h1>
            <p class="text-sm text-gray-500 mt-1">Manage your delivery locations easily.</p>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="border-b border-gray-100 text-sm font-semibold text-gray-600">
                    <th class="py-4 px-2">Full Name</th>
                    <th class="py-4 px-2">Phone</th>
                    <th class="py-4 px-2">Address</th>
                    <th class="py-4 px-2">Type</th>
                    <th class="py-4 px-2 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-50">
                <% if(addresses && addresses.length> 0) { %>
                    <% addresses.forEach(addr=> { %>
                        <tr class="text-sm text-gray-700 hover:bg-gray-50/50 transition-colors">
                            <td class="py-4 px-2 font-medium text-gray-900">
                                <%= addr.fullName %>
                            </td>
                            <td class="py-4 px-2 text-gray-500">
                              <%= addr.mobile || user.phone || "No number available" %>
                            </td>
                            <td class="py-4 px-2 max-w-xs truncate">
                                <%= addr.houseName %>, <%= addr.city %>, <%= addr.state %>
                                            <%= addr.pincode %>
                            </td>
                            <td class="py-4 px-2">
                                <span
                                    class="px-3 py-1 rounded-full text-[11px] font-bold uppercase tracking-wider 
                                <%= addr.type === 'Home' ? 'bg-blue-50 text-blue-600' : 'bg-green-50 text-green-600' %>">
                                    <%= addr.type %>
                                </span>
                            </td>
                            <td class="py-4 px-2 text-right space-x-3 font-medium">
                                <button onclick="editAddress('<%= addr._id %>')"
                                    class="text-gray-900 hover:underline">Edit</button>
                                <button onclick="deleteAddress('<%= addr._id %>')"
                                    class="text-red-500 hover:underline">Delete</button>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="py-12 text-center text-gray-400">
                                        No addresses found. Add a new one to get started.
                                    </td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <button id="add-address-btn"
        class="mt-8 bg-kiso-primary hover:bg-kiso-brown-dark text-white px-8 py-4 rounded-none font-bold text-xs uppercase tracking-widest transition-all active:scale-95 shadow-xl">
        + Add New Address
    </button>

    <!--  page nation -->
    <% if (totalPages> 1){%>
        <div class="mt-6 flex items-center justify-between border-t border-gray-100 pt-6">
            <p class="text-sm text-gray-500">
                Showing page <%= currentPage %> of <%= totalPages %>
            </p>
            <div class="flex gap-2">
                <% if(currentPage> 1) { %>
                    <a href="?page=<%= currentPage - 1 %>"
                        class="px-4 py-2 border rounded-lg hover:bg-gray-50 text-sm font-medium transition-colors">
                        Previous
                    </a>
                    <% } %>
                        <% for(let i=1; i <=totalPages; i++) { %>
                            <a href="?page=<%= i %>"
                                class="px-4 py-2 rounded-lg text-sm font-medium transition-colors <%= i === currentPage ? 'bg-gray-900 text-white' : 'border hover:bg-gray-50' %>">
                                <%= i %>
                            </a>
                            <% } %>
                                <% if (currentPage < totalPages) { %>
                                    <a href="?page=<%= currentPage + 1 %>"
                                        class="px-4 py-2 border rounded-lg hover:bg-gray-50 text-sm font-medium transition-colors">
                                        Next
                                    </a>
                                    <% } %>
            </div>
        </div>
        <% } %>
</div>

<!-- Include Address Modal -->
<%- include('./add-Address') %>

    <script src="/js/addres.js"></script>
    <script src="/js/address_add.js"></script>