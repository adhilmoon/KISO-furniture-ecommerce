<div class="w-full">
    <!-- Page Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Customers</h1>
        <p class="text-gray-600 text-sm">View and manage customer accounts.</p>
    </div>

    <!-- Search Bar -->
    <div class="mb-6">
        <div class="relative">
            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none"
                stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input type="text" id="searchInput" placeholder="Search by name or email"
                class="w-full pl-12 pr-12 py-3 bg-gray-50 border border-gray-200 rounded-lg">
            <button type="button" id="clearSearchBtn" aria-label="Clear search"
                class="hidden absolute right-3 top-1/2 -translate-y-1/2 w-7 h-7 rounded-full text-gray-500 hover:bg-gray-200 hover:text-gray-700 transition-colors">
                &times;
            </button>

        </div>
    </div>

    <!-- Filter Dropdown -->
    <div class="mb-6">
        <select id="statusFilter"
            class="px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-300">
            <option value="all">All</option>
            <option value="active">Active</option>
            <option value="blocked">Blocked</option>
        </select>
    </div>

    <!-- Stats Card with Image -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">

        <div class="bg-blue-50 p-6 rounded-2xl flex items-center shadow-sm">
            <div class="p-3 bg-blue-100 rounded-lg mr-4 text-blue-600">
                <i class="fas fa-users text-2xl"></i>
            </div>
            <div>
                <p class="text-sm text-gray-500 font-medium">Total Users</p>
                <h3 class="text-2xl font-bold text-gray-800">
                    <%= totalUsers %>
                </h3>
            </div>
        </div>

        <div class="bg-green-50 p-6 rounded-2xl flex items-center shadow-sm">
            <div class="p-3 bg-green-100 rounded-lg mr-4 text-green-600">
                <i class="fas fa-user-check text-2xl"></i>
            </div>
            <div>
                <p class="text-sm text-gray-500 font-medium">Active Users</p>
                <h3 class="text-2xl font-bold text-gray-800">
                    <%= users.filter(u=> u.isActive && !u.isBlocked).length %>
                </h3>
            </div>
        </div>

        <div class="bg-red-50 p-6 rounded-2xl flex items-center shadow-sm">
            <div class="p-3 bg-red-100 rounded-lg mr-4 text-red-600">
                <i class="fas fa-user-slash text-2xl"></i>
            </div>
            <div>
                <p class="text-sm text-gray-500 font-medium">Blocked Users</p>
                <h3 class="text-2xl font-bold text-gray-800">
                    <%= users.filter(u=> u.isBlocked).length %>
                </h3>
            </div>
        </div>

    </div>
    <!-- Users Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            User ID</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Name</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Email</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Joined Date</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Orders</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Status</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Action</th>
                    </tr>
                </thead>
                <tbody id="usersTableBody" class="divide-y divide-gray-200">
                    <% users.forEach((user, index)=> { %>
                        <tr class="hover:bg-gray-50 transition-colors user-row" data-user-id="<%= user._id %>"
                            data-status="<%= user.status.toLowerCase() %>" data-name="<%= user.name.toLowerCase() %>"
                            data-email="<%= user.email.toLowerCase() %>">
                            <!-- User ID -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900">#<%= user.userId || (10000 + index) %>
                                        </span>
                            </td>

                            <!-- Name -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div
                                        class="w-10 h-10 rounded-full bg-[#8B7355] flex items-center justify-center text-white font-bold text-sm mr-3">
                                        <%= user.name.charAt(0).toUpperCase() %>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">
                                            <%= user.name %>
                                        </p>
                                    </div>
                                </div>
                            </td>

                            <!-- Email -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-gray-600">
                                    <%= user.email %>
                                </span>
                            </td>

                            <!-- Joined Date -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-gray-600">
                                    <%= new Date(user.createdAt).toISOString().split('T')[0] %>
                                </span>
                            </td>

                            <!-- Orders -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900">
                                    <%= user.ordercount || user.orderCount || 0 %>
                                </span>
                            </td>

                            <!-- Status -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <% if (user.status==='Active' ) { %>
                                    <span
                                        class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        Active
                                    </span>
                                        <% } else if (user.status==='Blocked' ) { %>
                                            <span
                                                class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                                Blocked
                                            </span>
                                            <% } %>
                            </td>

                            <!-- Action: Block / Unblock -->
                            <td class="px-6 py-4 whitespace-nowrap">
                                <button id="action-btn-<%= user._id %>" onclick="toggleBlock('<%= user._id %>')"
                                    class="<%= user.isBlocked ? 'px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition' : 'px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition' %>">
                                    <%= user.isBlocked ? 'Activate' : 'Block' %>
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>



        <!-- Pagination -->
        <div id="usersPagination" class="bg-gray-50 px-6 py-4 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <p class="text-sm text-gray-600">
                    Showing <%= ((currentPage - 1) * perPage) + 1 %> to <%= Math.min(currentPage * perPage, totalUsers)
                            %> of <%= totalUsers %> customers
                </p>

                <div class="flex gap-2">
                    <% if (currentPage> 1) { %>
                        <a href="?page=<%= currentPage - 1 %>"
                            class="px-3 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 19l-7-7 7-7"></path>
                            </svg>
                        </a>
                        <% } %>

                            <% for(let i=1; i <=totalPages; i++) { %>
                                <a href="?page=<%= i %>"
                                    class="px-4 py-2 <%= i === currentPage ? 'bg-gray-900 text-white' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50' %> rounded-lg transition-colors">
                                    <%= i %>
                                </a>
                                <% } %>

                                    <% if (currentPage < totalPages) { %>
                                        <a href="?page=<%= currentPage + 1 %>"
                                            class="px-3 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M9 5l7 7-7 7"></path>
                                            </svg>
                                        </a>
                                        <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios@1.13.2/dist/axios.min.js"></script>
<script src="/js/admin-users.js"></script>
<script src="/js/search.js"></script>
